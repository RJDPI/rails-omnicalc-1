<h1>Payment Results</h1>


<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @apr.to_s(:percentage, { :precision => 4}) %>
  </dd>

  <dt>
    Number of Years
  </dt>
  <dd>
    <%= @years %>
  </dd>


  <dt>
    Principal
  </dt>
  <dd>
    <%= @principal.to_f.to_fs(:currency)%>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
    <%= @payment.to_f.to_fs(:currency) %>
  </dd>



